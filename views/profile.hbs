<div class="container">
  {{> userMenu}}
  <form
    action="/auth/edit-profile"
    method="post"
    class="form user-profile"
    autocomplete="off"
    autocapitalize="off"
      
    >
    <input type="hidden" name="_method" value="PUT" />

  <h3 class="form-title">تفاصيل الحساب </h3>
  <div class="field">
    <label for="fullname" class="control-label">الاسم ثلاثي
      <samp class="error">
        {{errors.fullname}}
        {{errors.success}}
      </samp></label>
                  <div class="form-group">
                            <i class="bx bx-user-circle"></i>
    <input
    type="text"
    name="fullname"
    placeholder="ادخل الاسم"
    value="{{user.fullname}}"
    class="form-control"
    />
                  </div>

    </div>
    <div class="field">
    <label for="username" class="control-label">اسم المستخدم
    <samp class="error">
    {{errors.username}}
    </samp></label>
                      <div class="form-group">
                              <i class="bx bx-user-pin"></i>
    <input
    type="text"
    name="username"
    placeholder="ادخل اسم المستخدم"
    value="{{user.username}}"
    class="form-control"
    />
                      </div>

    </div>
    <div class="field">
    <label for="email" class="control-label">البريد الالكتروني
    <samp class="error">
    {{errors.email}}
    </samp></label>
                      <div class="form-group">
                              <i class="bx bx-lock"></i>
    <input
    type="email"
    name="email"
    placeholder="ادخل البريد الالكتروني"
    value="{{user.email}}"
    class="form-control"
    />
                      </div>

    </div>
    <div class="field">
    <label for="phone" class="control-label">رقم الواتساب (اختياري)
    <samp class="error">
    {{errors.phone}}
    </samp></label>
                      <div class="form-group">
                              <i class="bx bxl-whatsapp"></i>
    <input
    type="tel"
    name="phone"
    placeholder="ادخل رقم الهاتف"
    value="{{user.phone}}"
    class="form-control"
    />
                      </div>

    </div>

    <div class="d-flex actions">
    <button type="submit" class="btn btn-primary" onclick="onSubmit('.user-profile', 'حفظ  هذه التغييرات')">حفظ التغييرات</button>
    <a href="/auth/change-password" class="btn btn-dark">تغيير كلمة المرورر</a>
    </div>
    </form>
    </div>
