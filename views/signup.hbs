<div class="container">
  <form
    action="/auth/signup"
    method="post"
    class="form"
    autocomplete="off"
    autocapitalize="off"
  >
    <h3 class="form-title">
      انشاء حساب جديد
    </h3>
    <div class="field">
      <label for="fullname" class="control-label">الاسم ثلاثي
        <samp class="alert-danger">
          {{errors.fullname}}
        </samp></label>
      <div class="form-group">
        <i class="bx bx-user-circle"></i>
        <input
          type="text"
          name="fullname"
          autofocus
          placeholder="ادخل الاسم"
          value="{{values.fullname}}"
          class="form-control"
        />
      </div>
    </div>
    <div class="field">
      <label for="username" class="control-label">اسم المستخدم
        <samp class="alert-danger">
          {{errors.username}}
        </samp></label>
      <div class="form-group">

        <i class="bx bx-user-pin"></i>
        <input
          type="text"
          name="username"
          placeholder="ادخل اسم المستخدم"
          value="{{values.username}}"
          class="form-control"
        />
      </div>
    </div>
    <div class="field">
      <label for="email" class="control-label">البريد الالكتروني
        <samp class="alert-danger">
          {{errors.email}}
        </samp></label>
      <div class="form-group">

        <i class="bx bx-lock"></i>
        <input
          type="email"
          name="email"
          placeholder="ادخل البريد الالكتروني"
          value="{{values.email}}"
          class="form-control"
        />
      </div>
    </div>
    <div class="field">
      <label for="password" class="control-label">كلمة المرور
        <samp class="alert-danger">
          {{errors.password}}
        </samp></label>
      <div class="form-group">

        <i class="bx bx-show show-password"></i>
        <i class="bx bx-hide hide-password"></i>
        <input
          type="password"
          name="password"
          placeholder="ادخل كلمة المرور"
          value="{{values.password}}"
          class="form-control"
        />
      </div>
    </div>
    <div class="field">
      <label for="repeat_password" class="control-label">
        تاكيد كلمة المرور
        <samp class="alert-danger">
          {{errors.repeat_password}}
        </samp></label>
      <div class="form-group">

        <i class="bx bx-show show-password"></i>
        <i class="bx bx-hide hide-password"></i>
        <input
          type="password"
          name="repeat_password"
          placeholder="تاكيد كلمة المرور"
          value="{{values.repeat_password}}"
          class="form-control"
        />
      </div>
    </div>
    <div class="d-flex">
      <a href="/auth/login">هل لديك حساب بالفعل ؟</a>
    </div>
    <div class="actions">
      <button type="submit" class="btn btn-primary">تسجيل مستخدم جديد</button>
    </div>

  </form>
</div>