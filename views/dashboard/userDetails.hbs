<section class="dashboard-product">
    <aside class="sidebar">
        {{> dashboardMenu}}
    </aside>
    <div class="dashboard-detials">
        <section class="main-content">

            {{#if message}}
            <div class="alert-error">
                {{message}}
            </div>
            {{/if}}
            <form
    action="/dashboard/users/{{user.id}}/update-role"
    method="post"
    class="form"
    autocomplete="off"
    autocapitalize="off"
  >
    <input type="hidden" name="_method" value="PUT" />
    <h3 class="form-title">تفاصيل الحساب </h3>
    <div class="field">
      <label for="fullname" class="control-label">اسم الكامل
      </label>
      <div class="form-group">
        <i class="bx bx-user-circle"></i>
        <input
          type="text"
          value="{{user.fullname}}"
          class="form-control"
          disabled
        />
      </div>

    </div>
    <div class="field">
      <label for="username" class="control-label">اسم المستخدم
      </label>
      <div class="form-group">
        <i class="bx bx-user-pin"></i>
        <input
          type="text"
          value="{{user.username}}"
          class="form-control"
          disabled
        />
      </div>

    </div>
    <div class="field">
      <label for="email" class="control-label">البريد الالكتروني
      </label>
      <div class="form-group">
        <i class="bx bx-lock"></i>
        <input
          type="email"
          value="{{user.email}}"
          class="form-control"
          disabled
        />
      </div>
    </div>
    <div class="field">
      <label for="phone" class="control-label">رقم الواتساب (اختياري)
      </label>
      <div class="form-group">
        <i class="bx bxl-whatsapp"></i>
        <input
          type="tel"
          value="{{user.phone}}"
          class="form-control"
          disabled
        />
      </div>
    </div>
    <div class="field">
      <label for="role">الصلاحية
      </label>
      <br />
      <select class="form-control" name="role" id="role">
            <option disabled selected>{{user.role}}</option>
            <option value="supervisor">supervisor</option>
            <option value="user">user</option>
      </select>
    </div>

    <div class="d-flex actions">
      <button type="submit" class="btn btn-success">حفظ التغييرات</button>
      {{#if user.deleted}}
      <a href="/dashboard/users/{{user.id}}/restore?reqUrl=users" class="btn btn-primary">مستخدم محذوف</a>
      {{else}}
      <a onclick="onDelete('/dashboard/users/{{user.id}}/delete?reqUrl=users', 'المستخدم')" class="btn btn-primary">حذف المستخدم</a>
      {{/if}}
    </div>
  </form>
                
</section>
    </div>
</section>